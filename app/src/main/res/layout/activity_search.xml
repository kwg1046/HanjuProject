            <TextView
                android:id="@+id/tv_num10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/noto_sans"
                android:text="10"
